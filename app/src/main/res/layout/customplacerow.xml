<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Prueba 2"
        android:id="@+id/listText"
        android:layout_alignBottom="@+id/listIcon"
        android:layout_toRightOf="@+id/listIcon"
        android:layout_toEndOf="@+id/listIcon"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Texto Prueba 1"
        android:id="@+id/listTitle"
        android:layout_above="@+id/listText"
        android:layout_alignLeft="@+id/listText"
        android:layout_alignStart="@+id/listText"
        android:textSize="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2,7 km."
        android:id="@+id/listDistance"
        android:layout_below="@+id/listTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="16dp"/>


</RelativeLayout>