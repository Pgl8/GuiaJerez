<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pgl8.guajerez" >

    <!-- Permisos básicos de la aplicación -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />

    <!-- OpenGL -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Permisos específicos para la realidad aumentada -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <!-- Declaración de actividades de la aplicación -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAhEcuqObf5rUftq6lYAB-OMtwYjuv-G0E" />

        <activity
            android:name=".activityPrincipal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityVinos"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_vinos"
            android:parentActivityName=".activityPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activityPrincipal" />
        </activity>
        <activity
            android:name=".activityInfoVinos"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_info_vinos"
            android:parentActivityName=".activityVinos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityVinos" />
        </activity>
        <activity
            android:name=".activityMapa"
            android:label="@string/title_activity_mapa"
            android:parentActivityName=".activityPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activityPrincipal" />
        </activity>
        <activity
            android:name=".activityAR"
            android:label="@string/title_activity_activity_ar"
            android:parentActivityName=".activityPrincipal"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityPrincipal" />
        </activity>
        <activity
            android:name=".activityLugares"
            android:label="@string/title_activity_activity_lugares"
            android:parentActivityName=".activityPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityPrincipal" />
        </activity>
        <activity
            android:name=".activityInfoLugares"
            android:label="@string/title_activity_activity_info_lugares"
            android:parentActivityName=".activityLugares" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityLugares" />
        </activity>
        <activity
            android:name=".activityInfoImagen"
            android:label="@string/title_activity_activity_info_imagen"
            android:parentActivityName=".activityInfoLugares" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityInfoLugares" />
        </activity>
        <activity
            android:name=".activityARLector"
            android:label="@string/title_activity_activity_arlector"
            android:parentActivityName=".activityPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pgl8.guajerez.activityPrincipal" />
        </activity>
    </application>

</manifest>
